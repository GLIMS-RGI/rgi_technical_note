doi = {10.5194/tc-7-1385-2013},
issn = {1994-0424},
journal = {The Cryosphere},
month = {sep},
number = {5},
pages = {1385--1398},
title = {{Heterogeneity in glacier response in the upper Shyok valley, northeast Karakoram}},
volume = {7},
year = {2013}
}
