journal = {Geological Society of America Bulletin},
keywords = {Strahler order,hypsometric analysis},
number = {11},
pages = {1117--1142},
title = {{Hypsometric (Area - Altitude) Analysis of Erosional Topography}},
volume = {63},
year = {1952}
}
